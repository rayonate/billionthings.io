<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="create_address" name="New Book">
		<t t-call="website.layout">
			<div id="wrap">
				<div class="oe_structure">
					<div class="container">
						<div class="row mt-5">
							<div class="col-4 bg-info align-items-center">
								<h2>
									2.Business Address
								</h2>
								<p>
									Add the location address of your business.
								</p>
							</div>
							<div class="col-8 border border-primary">
								<div class="row my-5">
									<div class="col-8 mx-auto">
										<form role="form" action="/profiles/address/create/action" method="POST">
											<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
											<!-- slug -->
											<input type="hidden" name="business_slug" t-att-value="business_slug" id="business_slug" class="form-control" />
											<!-- street -->
											<div class="form-group">
												<label for="street" class="control-label">
													No
													<span class="text-danger">*</span>
												</label>
												<input type="text" name="street" t-att-value="street" id="street" class="form-control" required="required" />
											</div>
											<!-- street2 -->
											<div class="form-group">
												<label for="street2" class="control-label">
													Address Line 1
													<span class="text-danger">*</span>
												</label>
												<input type="text" name="street2" t-att-value="street2" id="street2" class="form-control" required="required" />
											</div>
											<!-- zip -->
											<div class="form-group">
												<label for="city" class="control-label">
													City
													<span class="text-danger">*</span>
												</label>
												<input type="text" name="city" t-att-value="city" id="city" class="form-control" required="required" />
											</div>
											<!-- zip -->
											<div class="form-group">
												<label for="zip" class="control-label">
													Postal Code
												</label>
												<input type="text" name="zip" t-att-value="zip" id="zip" class="form-control" required="required" />
											</div>
											<!-- phone -->
											<div class="form-group">
												<label for="phone" class="control-label">
													Telephone 1
													<span class="text-danger">*</span>
												</label>
												<input type="text" name="phone" t-att-value="phone" id="phone" class="form-control" required="required" />
											</div>
											<!-- mobile -->
											<div class="form-group">
												<label for="mobile" class="control-label">
													Mobile
												</label>
												<input type="text" name="mobile" t-att-value="mobile" id="mobile" class="form-control" />
											</div>
											<!-- emial -->
											<div class="form-group">
												<label for="email" class="control-label">
													Email
													<span class="text-danger">*</span>
												</label>
												<input type="text" name="email" t-att-value="email" id="email" class="form-control" required="required" />
											</div>

											<div class="form-group">
												<label for="locationl" class="control-label">
													Location
												</label>
												<input type="text" name="location" t-att-value="locationl" id="location" class="form-control" />
											</div>
											<div class="clearfix oe_login_buttons">
												<button type="submit" class="btn btn-primary pull-right">
													Create
												</button>
											</div>
										</form>
									</div>
								</div>
							</div>
						</div>
						<div class="row mt-5"></div>
					</div>
				</div>
			</div>
		</t>
	</template>
</odoo>