<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="create_image" name="New Book">
		<t t-call="website.layout">
			<div id="wrap">
				<div class="oe_structure">
					<div class="container">
						<div class="row mt-5">
							<div class="col-4 bg-info align-items-center">
								<h2>
									3.Business Images
								</h2>
								<p>
									Upload the business Images
								</p>
							</div>
							<div class="col-8 border border-primary">
								<div class="row my-5">
									<div class="col-8 mx-auto">
										<form action="/images/create/action" method="POST" enctype="multipart/form-data">
											<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
											<!-- slug -->
											<input type="hidden" name="business_slug" t-att-value="business_slug" id="business_slug" class="form-control" />
											
											<div class="clearfix oe_login_buttons">
												<button type="submit" id="imageNextBtn" class="btn btn-primary pull-right">
													Next
												</button>
											</div>

											<div class="form-group">
												<label for=" businessType" class="control-label">
													Images
													<span class="text-danger">*</span>
												</label>
												<input type="file" name="task_attachment" class="file" multiple="true" data-show-upload="true" data-show-caption="true" data-show-preview="true"/>


												<div class="validation-error-msg" id="validation_name"></div>
											</div>

											<div class="clearfix oe_login_buttons">
												<button type="submit" id="imageNextBtn" class="btn btn-primary pull-right">
													Next
												</button>
											</div>
										</form>
									</div>
								</div>
							</div>
						</div>
						<div class="row mt-5"></div>
					</div>
				</div>
			</div>
		</t>
	</template>
</odoo>